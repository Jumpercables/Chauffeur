<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <!--
   Unattended setup: The following variables can be set:
   -->

  <!--
      ====================================================================================
      Defines & Variables
   -->
  <?ifndef $(var.BuildArtifactDir)?>
  <?define BuildArtifactDir = ..\..\src\bin\Debug?>  
  <?endif?>    
  
  <?ifndef $(var.Version)?>
  <?define Version = 1.0.0.0?>
  <?endif?>
  
  <?define TemplateDir = $(var.BuildArtifactDir)\Templates?>
  <!--
      ====================================================================================
      Package start
   -->
  <Product Id="7BD9DB27-0ABD-40D3-BB56-C466EAE6E0A8" 
           Name="Jenkins Chauffeur Service" 
           Language="1033" 
           Version="$(var.Version)" 
           Manufacturer="Metis LLC" 
           UpgradeCode="bc63b526-be6d-411e-9bd7-ba707c91bbd3">

    <!-- Package IDs are valid for a single package version only - they are autogenerated by WiX -->
    <!-- Let's require Windows Installer 4.0 (included in Vista) -->
    <Package InstallerVersion="200"
             Compressed="yes"
             InstallScope="perMachine"
             Description="Jenkins Chauffeur Service used to install and de-install builds hosted in a Jenkins Continious Integration Service."/>

    <!-- Set properties for add/remove programs -->
    <Property Id="PRODUCTNAME" Value="Chauffeur"/>
    <Property Id="PRODUCTVERSION" Value="$(var.Version)"/>
    <Property Id="ARPNOREPAIR" Value="yes" Secure="yes" />
    <Property Id="ARPNOMODIFY" Value="yes" Secure="yes" />

    <Icon Id="icon.ico" SourceFile="jenkins.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico" />
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Feature Id="ProductFeature" Title="Jenkins Chauffeur Service" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>

    <!-- Properties used by the WixUI_Advanced -->
    <Property Id="ApplicationFolderName" Value="Jenkins" />
    <Property Id="WixAppFolder" Value="WixPerMachineFolder" />
    
    <UIRef Id="WixUI_Advanced"/>
  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="APPLICATIONFOLDER" Name="Jenkins">
          <Directory Id="CHAUFFEURFOLDER" Name="Chauffeur">
            <Directory Id="TEMPLATESFOLDER" Name="Templates"/>
            <Directory Id="BINFOLDER" Name="Bin"/>
          </Directory>
        </Directory>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents">
      <Component Id="WindowsService" Guid="34B2A0C2-EC50-4BC8-9BD6-6D0A5CB37802" Directory="BINFOLDER">
        
        <File Id="Chauffeur.exe" Source="$(var.BuildArtifactDir)\Chauffeur.exe"/>
        <File Id="Chauffeur.exe.config"  Source="$(var.BuildArtifactDir)\Chauffeur.exe.config" />
                
        <ServiceInstall Id="ServiceInstaller"
                        Type="ownProcess"
                        Vital="yes"
                        Name="ChauffeurService"
                        DisplayName="Jenkins Chauffeur Service"
                        Description="Jenkins Chauffeur Service used to install and de-install builds hosted in a Jenkins Continious Integration Service."                        
                        Start="auto"                       
                        Account="LocalSystem"                        
                        ErrorControl="ignore"                       
                        Interactive="no"/>
        
        <ServiceControl Id="StartService"
                        Start="install"
                        Stop="both"
                        Remove="uninstall"                        
                        Name="ChauffeurService"
                        Wait="yes" />
                
        <File Id="Newtonsoft.Json" Source="$(var.BuildArtifactDir)\Newtonsoft.Json.dll"/>
        <File Id="Chauffeur.Jenkins.dll" Source="$(var.BuildArtifactDir)\Chauffeur.Jenkins.dll" />
               
        <RemoveFile Id="DeleteFilesWindowsService" Name="*.*" On="uninstall" />
      </Component>     
    
      <Component Id="Templates" Guid="BC16FDCA-4EE5-48A4-8807-B26860CA658C" Directory="TEMPLATESFOLDER">
        <File Id="_Notification_Body.xslt" Source="$(var.TemplateDir)\_Notification-Body.xslt"/>
        <File Id="_Notification_Subject.xslt"  Source="$(var.TemplateDir)\_Notification-Subject.xslt" /> 
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>